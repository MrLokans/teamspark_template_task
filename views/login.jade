doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title login
    // Bootstrap core CSS
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='stylesheets/signin.css', rel='stylesheet')
    //- script(src='../../assets/js/ie-emulation-modes-warning.js')
  body
    .container
      form.form-signin
        h2.form-signin-heading Enter email and password to log in
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control.email-field(type='email', placeholder='Email address', required='', autofocus='', name='email')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control.password-field(type='password', placeholder='Password', required='', name='email')
        .checkbox
          label
            input(type='checkbox', value='remember-me')
            |  Remember me
        button.btn.btn-lg.btn-primary.btn-block.login-btn(type="button") Log in
    // /container
  include scripts
  script(src='javascripts/login.js')
